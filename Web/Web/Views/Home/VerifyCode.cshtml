<body class="text-center">


    <main class="form-signin w-100 m-auto">

        <img class="mb-4" src="/images/loginimage.png" alt="" height="60" width="80">
        <h1 class="h3 mb-3 fw-normal" style="padding:5px; color:#173308; font-size: 25px; font-weight:500;">Şifrenizi sıfırlayın!</h1>

        @using (Html.BeginForm("VerifyCode", "Home", FormMethod.Post))
        {
            <div class="form-floating" style="color:#173308;">
                @Html.TextBox("code", null, "", new{ @class="form-control", id="code", placeholder="Doğrulama Kodu", type="text" })
                <label for="code">Doğrulama Kodu</label>
            </div>
            <div class="form-floating" style="color:#173308;">
                @Html.TextBox("password", null, "", new{ @class="form-control", id="password", placeholder="Şifre", type="password" })
                <label for="password">Şifre</label>
            </div>


            <button class="w-100 btn btn-lg btn btn-primary mt-2" style=" padding:5px; background-color:#9fe870;color:#173308; font-size: 15px; font-weight:500;" type="submit">Sıfırla</button>
            <a href="@Url.Action("Login", "Home")" class="w-100 btn btn-lg btn-outline-secondary mt-2" style=" padding:5px;color:#173308; font-size: 15px; font-weight:500;" type="submit">Giriş Yap</a>
        }

    </main>

</body>
