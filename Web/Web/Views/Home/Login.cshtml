<body class="text-center">


    <main class="form-signin w-100 m-auto">

        <img class="mb-4" src="/images/loginimage.png" alt="" height="60"width="80">
        
        <h1 class="h3 mb-3 fw-normal" style=" color: #173308; font-size: 35px; font-weight:900;">Tekrar Hoşgeldiniz!</h1>
        <h2 class="h3 mb-3 fw-normal" style=" color: #173308; font-size: 15px; font-weight:300;">Bilgilerinizi Doldurun</h2>

        @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { id = "loginPage", enctype = "multipart/form-data" }))
        {
            <div class="form-floating" style="color:#173308;">
                @Html.TextBox("email", null, "", new{ @class="form-control", id="floatingInput", placeholder="name@example.com", type="email" })
                <label for="floatingInput">E-posta Adresi</label>
            </div>
            <div class="form-floating" style="color:#173308;">
                @Html.TextBox("password", null, "", new{ @class="form-control", id="floatingPassword", placeholder="Şifre", type="password" })
                <label for="floatingPassword">Şifre</label>
            </div>
            <button class="w-100 btn btn-lg" type="submit" style=" padding:5px; background-color:#9fe870;color:#173308; font-size: 15px; font-weight:500;">Giriş Yap</button>
            <a href="@Url.Action("Register", "Home")" class="w-100 btn btn-lg btn-outline-secondary mt-2" type="submit" style="padding:5px; color:#173308;font-size: 15px; font-weight:500;">Kayıt Ol</a>
            <div class="checkbox mb-3" style="color:#173308;">
                <a href="@Url.Action("ForgotPassword", "Home")" style="accent-color:#173308;">Şifremi unuttum</a>
            </div>
           

        }

        @{
            var errorMessages = ViewData.ModelState.Values.SelectMany(v => v.Errors).Select(e => e.ErrorMessage);
        }

        @if (errorMessages.Any())
        {
            <div class="alert alert-danger mt-3" style="font-size:12px;padding-left:2px;padding-bottom:2px;">
                @if (errorMessages.Contains("The email field is required.") || errorMessages.Contains("The password field is required."))
                {
                    <p>Lütfen eksik kısımları doldurunuz!!</p>
                }
            </div>



        }

        <img class="logo-icon" src="/images/resimkitchogüncel.png">
        
       
    </main>

 
</body>
